<?xml version="1.0"?>
<odoo>

    <record id="create_employee_wizard_form" model="ir.ui.view">
        <field name="name">hr.create.employee.wizard.form</field>
        <field name="model">hr.create.employee.wizard</field>
        <field name="arch" type="xml">
            <form string="hr.create.employee.wizard.form">
                <group>
                    <field name="work_email"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="macro_area_id"/>
                    <field name="work_group_id"/>
                    <field name="function_execute_id"/>
                    <field name="parent_id"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                    <field name="bank_account_id"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_right oe_highlight"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
