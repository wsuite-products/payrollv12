<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_hr_payslip_format">
        <t t-call="web.html_container">
            <t t-foreach="docs.payslip_ids" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header">
                        <div class="o_boxed_header">
                            <div class="row">
                                <div class="col-4">
                                    <img t-if="o.employee_id.company_id.logo"
                                         t-att-src="image_data_uri(o.employee_id.company_id.logo)"
                                         alt="Logo"/>
                                </div>
                                <div class="col-4 text-center">
                                    <span t-field="o.employee_id.company_id"
                                          style="font-size: 16px;"/>
                                    <br/>
                                    <span t-field="o.employee_id.company_id.vat"
                                          style="font-size: 16px;"/>
                                </div>
                                <div class="col-4 text-right">
                                    <span t-field="o.employee_id.company_id"/>
                                    <br/>
                                    <span t-field="o.create_date"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="page">
                        <t t-set="employee_name_pattern"
                           t-value="('{0} {1} {2} {3}'.format(o.employee_id.address_home_id.first_name or '''''',o.employee_id.address_home_id.second_name or '''''',o.employee_id.address_home_id.surname or '''''',o.employee_id.address_home_id.second_surname or ''''''))"/>
                        <link href='https://fonts.googleapis.com/css?family=Titillium Web'
                              rel='stylesheet'/>
                        <t t-set="decimal_precision"
                           t-value="request.env['decimal.precision'].precision_get('Product Price')"/>
                        <style type="text/css">
                            body {
                                font-family: 'Titillium Web';
                            }
                        </style>
                        <div>
                            <table width="100%"
                                   style="border-collapse: collapse;border: 1px solid black;">
                                <tr>
                                    <td width="100%"
                                        colspan="4">
                                        <center><b>Definitiva</b></center>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%" colspan="2"
                                        style="padding-left: 5px;">
                                        <t t-esc="employee_name_pattern"/>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Contrato</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-esc="float(o.employee_id.identification_id)"
                                              t-options='{"widget": "float", "precision": 0}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Identificación</b>
                                    </td>
                                    <td width="75%" colspan="3"
                                        style="padding-left: 5px;">
                                        <span t-esc="float(o.employee_id.identification_id)"
                                              t-options='{"widget": "float", "precision": 0}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Unidad</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <!-- Vicepresidencia Creativa Y Operaciones -->
                                        <span t-field="o.employee_id.job_id"/>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Ingreso</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-field="o.employee_id.entry_date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Cargo</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        Grafico
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Fecha Termina</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-field="o.contract_id.date_end"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Vinculación</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        Indefinido
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Fecha Pago</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-field="docs.date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Motivo</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-field="docs.withdrawal_reason_id.name"/>
                                    </td>
                                    <!--td width="25%" style="padding-left: 5px;">
                                        <t t-if="o.unjustified">
                                            Sin Justa Causa
                                        </t>
                                        <t t-if="not o.unjustified">
                                            Con Justa Causa
                                        </t>
                                    </td-->
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Fecha Adicionado</b>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <span t-field="docs.date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Centro de Costo</b>
                                    </td>
                                    <td width="75%" colspan="3"
                                        style="padding-left: 5px;">
                                        ND03               - Creativa
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Linea costo</b>
                                    </td>
                                    <td width="75%" colspan="3"
                                        style="padding-left: 5px;">
                                        <span t-field="o.employee_id.cost_line_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Grupo de trabajo</b>
                                    </td>
                                    <td width="75%" colspan="3"
                                        style="padding-left: 5px;">
                                        <span t-field="o.employee_id.work_group_id"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <br/>
                        <div>
                            <table width="100%">
                                <tr>
                                    <td width="100%" colspan="3"
                                        style="background: darkgray">
                                        <b><center>Base Liquidación</center></b>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        <center>Concepto</center>
                                    </td>
                                    <td width="25%"
                                        style="padding-left: 5px;">
                                        <b>Días</b>
                                    </td>
                                    <td width="25%">
                                        &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                        &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Fecha De Antiguedad
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <b><span t-field="o.employee_id.entry_date"/></b>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Totales Trabajados
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-if="docs.payslip_ids">
                                            <t t-set="dias_totales"
                                               t-value="0.0"/>
                                            <t t-foreach="docs.payslip_ids"
                                               t-as="o">
                                                <t t-set="dias_totales"
                                                   t-value="dias_totales+docs.employee_id.calculate_days_compensation(o)"/>
                                            </t>
                                            <t t-esc="dias_totales"/>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Totales Año
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-if="docs.date">
                                            <t t-set="dias_totales_ano"
                                               t-value="0.0"/>
                                            <t t-set="dias_totales_ano"
                                               t-value="dias_totales_ano+docs.employee_id.get_days_annual(docs.date)"/>
                                            <t t-esc="dias_totales_ano"/>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Totales Semestre
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-if="docs.date">
                                            <t t-set="dias_totales_sem"
                                               t-value="0.0"/>
                                            <t t-set="dias_totales_sem"
                                               t-value="dias_totales_sem+docs.employee_id.get_days_biannual(docs.date)"/>
                                            <t t-esc="dias_totales_sem"/>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Causados Vacaciones
                                    </td>
                                    <t t-set="causados_leave"
                                       t-value="0.0"/>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-if="docs.date and o.employee_id.entry_date">
                                            <t t-set="diff"
                                               t-value="relativedelta(docs.date, o.employee_id.entry_date)"/>
                                            <t t-set="causados_leave"
                                               t-value="(diff.years*12*1.25 + diff.months * 1.25 + diff.days*(1.25/30))"/>
                                            <t t-esc="'%.2f' % causados_leave"/>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <t t-set="vacaciones_leave"
                                   t-value="0.0"/>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Disfrutados Vacaciones
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-foreach="docs.env['hr.leave'].search([('employee_id','=',docs.employee_id.id),('request_date_to', '&lt;=', docs.date),('holiday_status_id.name','=','Vacaciones')])" t-as="leave">
                                            <t t-set="vacaciones_leave"
                                               t-value="vacaciones_leave+leave.number_of_days_display"/>
                                        </t>
                                        <span t-esc="vacaciones_leave"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Dias Pendientes Vacaciones
                                    </td>
                                    <td style="padding-right: 5px;text-align: right;border: 1px solid black;">
                                        <t t-esc="'%.2f' % (causados_leave - vacaciones_leave)"/>
                                    </td>
                                    <td>
                                        &#160;
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%">
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        <u>Basico para vacaciones</u>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <span t-esc="o.contract_id.wage"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        <u>Base Para Vacaciones</u>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <span t-esc="o.contract_id.wage"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%">
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Valor Vacaciones
                                    </td>
                                    <td width="25%"
                                        style="padding-right: 5px;border: 1px solid black;text-align: right;">
                                        <t t-set="vacaciones_pro"
                                           t-value="0.0"/>
                                        <t t-foreach="o.line_ids"
                                           t-as="line">
                                            <t t-if="line.salary_rule_id.name=='VACACIONES POR RETIRO'">
                                                <t t-set="vacaciones_pro"
                                                   t-value="vacaciones_pro+line.total"/>
                                            </t>
                                        </t>
                                        <span t-esc="vacaciones_pro"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%">
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Sueldo Basico Para Cesantias
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;padding-left: 5px;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <span t-esc="o.contract_id.fix_wage_amount"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Prom. Auxilio De Transporte Para Cesantías
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%" style="background: darkgray;padding-left: 5px;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-set="prom_aux_trans" t-value="0.0"/>
                                        <t t-set="prom_aux_trans" t-value="prom_aux_trans+(docs.employee_id.get_average_paid_annual_termination(docs.date, o, ('AUXTRANS',''))/docs.employee_id.get_days_annual(docs.date)*30)"/>
                                        <t t-esc="docs.employee_id.round1(prom_aux_trans)" t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Prom. Otros Conceptos Para Cesantías
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;padding-left: 5px;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-set="prom_aux_otros" t-value="0.0"/>
                                        <t t-set="prom_aux_otros" t-value="prom_aux_otros+(docs.employee_id.get_average_paid_annual_termination_seq(docs.date, o, ('139','16','18','19','20','21','22','25','70'))/docs.employee_id.get_days_annual(docs.date)*30)"/>
                                        <t t-esc="docs.employee_id.round1(prom_aux_otros)" t-options='{"widget": "float", "precision": decimal_precision}'/>

                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        <u>Salario Base De Cesantias</u>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;padding-left: 5px;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <span t-esc="docs.employee_id.round1(o.contract_id.fix_wage_amount + prom_aux_trans + prom_aux_otros)"
                                              t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                                <t t-foreach="o.line_ids"
                                   t-as="line">
                                    <t t-if="line.name=='CESANTIAS POR RETIRO'">
                                        <tr>
                                            <td width="50%"
                                                style="padding-left: 5px;">
                                                Cesantias Causadas
                                            </td>
                                            <td width="25%">
                                                &#160;
                                            </td>
                                            <td width="25%"
                                                style="background: darkgray;border: 1px solid black;padding-right: 5px;text-align: right;">
                                                <span t-esc="line.total"
                                                      t-options='{"widget": "float", "precision": decimal_precision}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Cesantias Consolidadas
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-foreach="o.line_ids"
                                           t-as="line">
                                            <t t-if="line.name=='CESANTIAS POR RETIRO'">
                                                <span t-esc="line.total"
                                                      t-options='{"widget": "float", "precision": decimal_precision}'/>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Intereses De Cesantias
                                    </td>
                                    <td width="25%"
                                        style="border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-foreach="o.line_ids"
                                           t-as="line">
                                            <t t-if="line.name=='INTERESES DE CESANTIAS POR RETIRO'">
                                                <span t-esc="line.total"
                                                      t-options='{"widget": "float", "precision": decimal_precision}'/>
                                            </t>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        Salario Base Para Prima
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                    <td width="25%"
                                        style="background: darkgray;border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-set="prom_aux_prima" t-value="0.0"/>
                                        <t t-set="prom_aux_prima" t-value="prom_aux_prima+(docs.employee_id.get_average_paid_biannual_termination(docs.date, o, ('BASIC', 'AJUSSAL' ,'AUSAJUS', 'AUS', 'AUSINC', 'AUXTRANS'))/docs.employee_id.get_days_biannual(docs.date)*30)"/>
                                        <t t-esc="docs.employee_id.round1(prom_aux_prima)" t-options='{"widget": "float", "precision": decimal_precision}'/>
                                    </td>
                                </tr>
                            </table>
                            <br/><br/>
                            <table width="100%">
                                <tr>
                                    <td width="50%"
                                        style="padding-left: 5px;">
                                        » Valor Prima Legal
                                    </td>
                                    <td width="25%"
                                        style="border: 1px solid black;padding-right: 5px;text-align: right;">
                                        <t t-foreach="o.line_ids"
                                           t-as="line">
                                            <t t-if="line.salary_rule_id.name=='PRIMA LEGAL DEFINITIVA'">
                                                <span t-esc="line.total"
                                                      t-options='{"widget": "float", "precision": decimal_precision}'/>
                                            </t>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        &#160;
                                    </td>
                                </tr>
