<?xml version="1.0"?>
<odoo>

    <record id="reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.novelty.reject.wizard.form</field>
        <field name="model">hr.novelty.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="hr.novelty.reject.wizard.form">
                <group>
                    <field name="reject_reason"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Confirm"
                            class="oe_right oe_highlight"/>
                    <button string="Cancel" class="oe_right"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

