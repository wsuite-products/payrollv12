<?xml version="1.0"?>
<odoo>

    <record id="novelty_create_contact_form" model="ir.ui.view">
        <field name="name">novelty.create.contact.form</field>
        <field name="model">novelty.create.contact</field>
        <field name="arch" type="xml">
            <form>
                <group conspan="4" col="4">
                    <field name="first_name" required="1"/>
                    <field name="second_name"/>
                    <field name="surname"/>
                    <field name="second_surname"/>
                    <field name="gender"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="city_id"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    <field name="country_id"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    <field name="state_id"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    <field name="l10n_co_document_type"/>
                    <field name="vat"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Confirm"
                            class="oe_right oe_highlight"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_novelty_create_contact" model="ir.actions.act_window">
        <field name="name">Create Contact</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">novelty.create.contact</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
