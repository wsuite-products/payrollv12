<odoo>

    <record id="hr_employment_relationship_view_tree" model="ir.ui.view">
        <field name="name">hr.employment.relationship.view.tree</field>
        <field name="model">hr.employment.relationship</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" required="1"/>
                <field name="code" required="1"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_employment_relationship_action"
            model="ir.actions.act_window">
        <field name="name">Hr Employment Relationship</field>
        <field name="res_model">hr.employment.relationship</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="hr_employment_relationship_menu_action"
        name="Hr Employment Relationship"
        action="hr_employment_relationship_action"
        parent="hr.menu_human_resources_configuration"/>

</odoo>
