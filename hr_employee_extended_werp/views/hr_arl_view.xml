<odoo>

    <record id="hr_arl_view_tree" model="ir.ui.view">
        <field name="name">hr.arl.view.tree</field>
        <field name="model">hr.arl</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="level" required="1"
                       options="{'no_open':'False', 'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                <field name="percentage" required="1"/>
                <field name="name" required="1"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_arl_action" model="ir.actions.act_window">
        <field name="name">Hr Arl</field>
        <field name="res_model">hr.arl</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="hr_arl_menu_action"
        name="Hr Arl"
        action="hr_arl_action"
        parent="hr.menu_human_resources_configuration"/>

</odoo>
