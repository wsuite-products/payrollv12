<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- HR Hobbies Form View -->
   <record id="hr_hobbies_view_form" model="ir.ui.view">
        <field name="name">hr.hobbies.form</field>
        <field name="model">hr.hobbies</field>
        <field name="arch" type="xml">
            <form string="HR Hobbies">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <group colspan="4" col="4">
                        <field name="name" required="1"/>
                        <field name="hobby_categ_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Hobbies Tree View -->
    <record id="hr_hobbies_view_tree" model="ir.ui.view">
        <field name="name">hr.hobbies.list</field>
        <field name="model">hr.hobbies</field>
        <field name="arch" type="xml">
            <tree string="HR Hobbies">
                <field name="name"/>
                <field name="hobby_categ_id"/>
            </tree>
        </field>
    </record>

    <!-- HR Hobbies Action -->
    <record id="hr_hobbies_action" model="ir.actions.act_window">
        <field name="name">HR Hobbies</field>
        <field name="res_model">hr.hobbies</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- HR Hobbies Menuitem -->
    <menuitem
        id="hr_hobbies_menu_action"
        name="HR Hobbies"
        groups="hr.group_hr_user"
        action="hr_hobbies_action"
        parent="hr_employee_extended.hr_curriculum_vitae_menu"/>

</odoo>