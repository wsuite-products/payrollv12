<?xml version="1.0"?>
<odoo>

    <record id="reverse_wizard_form" model="ir.ui.view">
        <field name="name">hr.contract.completion.reverse.wizard.form</field>
        <field name="model">hr.contract.completion.reverse.wizard</field>
        <field name="arch" type="xml">
            <form string="hr.contract.completion.reverse.wizard.form">
                <group>
                    <field name="reverse_reason"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Confirm"
                            class="oe_right oe_highlight"/>
                    <button string="Cancel" class="oe_right"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
